{
  "name": "ohriv-monorepo",
  "version": "1.0.0",
  "description": "Ohriv AI-powered recruitment platform - Monorepo with Motia backend",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:front\" \"pnpm dev:back\"",
    "dev:front": "pnpm --filter @ohriv/frontend dev",
    "dev:back": "pnpm --filter backend dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:all": "concurrently \"pnpm dev:front\" \"pnpm dev:back\"",
    "build": "pnpm --filter shared build && pnpm --filter @ohriv/database build && pnpm --filter @ohriv/frontend build",
    "build:backend": "pnpm --filter backend build",
    "build:all": "pnpm build && pnpm build:backend",
    "start": "pnpm --filter @ohriv/frontend start",
    "type-check": "pnpm -r type-check",
    "type-check:watch": "pnpm -r type-check:watch",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "check": "pnpm type-check && pnpm lint",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "test": "pnpm -r test",
    "watch": "pnpm -r watch",
    "docker:db:dev": "pnpm --filter @ohriv/database docker:dev",
    "docker:db:dev:stop": "pnpm --filter @ohriv/database docker:dev:stop",
    "docker:db:dev:logs": "pnpm --filter @ohriv/database docker:dev:logs",
    "docker:db:cluster": "pnpm --filter @ohriv/database docker:cluster",
    "docker:db:cluster:start": "pnpm --filter @ohriv/database docker:cluster:start",
    "docker:db:cluster:stop": "pnpm --filter @ohriv/database docker:cluster:stop",
    "docker:db:prod": "pnpm --filter @ohriv/database docker:prod",
    "docker:db:prod:deploy": "pnpm --filter @ohriv/database docker:prod:deploy",
    "docker:backend:dev": "pnpm --filter backend dev:docker",
    "docker:backend:prod": "pnpm --filter backend prod:docker"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "concurrently": "^8.2.2",
    "typescript": "^5.5.3"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
